<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Ejs ka home</h1>
   
    <% if (locals.id) { %>
        <h2>Short Url</h2>
        <a href="http://localhost:3000/url/<%= id %>">http://localhost:3000/url/<%= id %></a>
    <% } %>

    <div>
        <form method="POST" action="/url">
            <label for="URl">Enter  your Redirect Url</label>
            <input type="text" name="url" placeholder="Enter Url">
            <button type="submit">submit</button>
        </form>
    </div>

    <div>
        <% if (locals.urls) { %>

            <table>
                <thead>
                    <th>S.NO</th>
                    <th>Url</th>
                    <th>Short ID</th>
                    <th>Clicks</th>
                </thead>

                <tbody>
                    <% urls.forEach((url, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= url.url %></td>
                            <td><%= url.shortId %></td>
                            <td><%= url.visitsHistory.length %></td>

                        </tr>
                      
                      
                    <% }) %>
                </tbody>
            </table>         
        <% } %>

    </div>
</body>
</html>

